modules = ["dotnet"]

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk", "zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Run PstToolkit"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dotnet_run"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dotnet_message"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dotnet_listmessages"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dotnet_extract"

[[workflows.workflow]]
name = "Build and Run PstToolkit"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --project PstToolkitDemo/PstToolkitDemo.csproj"
waitForPort = 5000

[[workflows.workflow]]
name = "dotnet_run"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd PstToolkitDemo && dotnet run"

[[workflows.workflow]]
name = "dotnet_message"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd PstToolkitDemo && dotnet run message newtest.pst \"Inbox/Test\""

[[workflows.workflow]]
name = "dotnet_listmessages"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd PstToolkitDemo && dotnet run listmessages newtest.pst \"Inbox/Test\""

[[workflows.workflow]]
name = "dotnet_extract"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd PstToolkitDemo && dotnet run extract newtest.pst \"Inbox/Test\" \"extracted\""

[deployment]
run = ["sh", "-c", "dotnet run --project PstToolkitDemo/PstToolkitDemo.csproj"]
